<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vertical_item_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/subcategory_text"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/vertical_item_name_text_margin"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/vertical_item_name_text_padding_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/vertical_item_name_text_size"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/vertical_item_recycler_view_margin"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>